{
    "semi": false,
    "overrides": [
      {
        "files": ["*.js"],
        "options": {
          "jsxBracketSameLine": true,
          "jsxSingleQuote": true,
          "printWidth": 80,
          "semi": true,
          "singleQuote": true,
          "tabWidth": 2,
          "useTabs": false
        }
      },
      {
        "files": ["*.html"],
        "options": {
          "printWidth": 120,
          "tabWidth": 2,
          "singleQuote": false,
          "useTabs": false
        }
      },
      {
        "files": ["*.css"],
        "options": {
          "tabWidth": 2,
          "singleQuote": true,
          "useTabs": false
        }
      }
    ]
  }
  