{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "no-multi-spaces": "off",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "indent": ["error", 2, { "MemberExpression": 1 }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "comma-dangle": ["error", {
      "objects": "always",
      "functions": "ignore"
    }]
  }
}
